<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/status_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_light"
    android:drawingCacheQuality="high">

    <EditText
        android:id="@+id/etText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:background="@android:color/holo_green_light"
        android:drawingCacheQuality="high"
        android:ems="10"
        android:hint="@string/add_text_status"
        android:inputType="text|textMultiLine"
        android:maxLength="200"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="30sp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabUploadStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:clickable="true"
        android:elevation="4dp"
        android:focusable="true"
        app:backgroundTint="@color/colorPrimary"
        app:srcCompat="@mipmap/ic_arrow_forward_white_24dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabChangeBGcolor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fabUploadStatus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:clickable="true"
        android:elevation="4dp"
        android:focusable="true"
        app:backgroundTint="@color/colorPrimary"
        app:srcCompat="@mipmap/ic_palette_white_24dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabChangeFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fabChangeBGcolor"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/fabChangeBGcolor"
        android:layout_toRightOf="@+id/fabChangeBGcolor"
        android:clickable="true"
        android:elevation="4dp"
        android:focusable="true"
        app:backgroundTint="@color/colorPrimary"
        app:srcCompat="@mipmap/ic_format_paint_white_24dp" />

</RelativeLayout>